  </nav>
  <!-- END NAV -->

  <div class="container">
    <div class="section">
      <div class="columns">
        <div class="column has-text-centered">
          <h1 class="title" style="color: ghostwhite;">ZODIA | CELEBRITIES</h1><br>
        </div>
      </div>
      <div id="app" class="row columns is-multiline">

        <body>
          <% for( let index=0; index < celebrities.length; index++ ) { %>
            <% let a=celebrities[index]; %>
              <% a=a.toJSON() %>
                <p>
                  <%= a.name %>
                </p>
                <a href="/celebrities/<%= a.id %>">View</a>
                <hr>
                <% } %>
                  <a href="/celebrities/new/">Add Celebrity</a>
                  <a href="./signs"> Goto Signs</a>
        </body>
      </div>
    </div>
  </div>
  <footer class="footer">
    <div class="container">
      <div class="content has-text-centered">
      </div>
    </div>
  </footer>

  <script src="../js/cardsData.js"></script>

  <!-- Using Vue to populate cards to reduce redundant code -->
  <script>
    var app = new Vue({
      el: '#app',
      data: {
        cardData: cardsData
      }
    })

  </script>
</body>

